@page
@model ProgramasRazor.Pages.Programa3Model

@{
    ViewData["Title"] = "Evaluar Expresión";
}
<div class="contenedor-titulo">
    <h2>Evaluador de Expresiones</h2>
</div>

<div class="contenedor">
<form method="post">
    <div>
        <label for="a">a:</label>
        <input type="number" id="a" name="a" step="0.01" required />
    </div>
    <div>
        <label for="b">b:</label>
        <input type="number" id="b" name="b" step="0.01" required />
    </div>
    <div>
        <label for="x">x:</label>
        <input type="number" id="x" name="x" step="0.01" required />
    </div>
    <div>
        <label for="y">y:</label>
        <input type="number" id="y" name="y" step="0.01" required />
    </div>
    <div>
        <label for="n">n:</label>
        <input type="number" id="n" name="n" required />
    </div>
        <button type="submit" class="btn"><span>Calcular</span></button>
</form>

    @if (Model.resultado != null)
    {
        int iteracion = 1;
        <h2>Resultado Final: @Model.resultado</h2>

        <h3>Resultados Por Iteracion:</h3>
        <ul>
            @foreach (var resultadoIntermedio in Model.resultadosIntermedios)
            {
                <li>Iteracion @iteracion: @resultadoIntermedio</li>
                iteracion++;
            }
        </ul>
    }
</div>